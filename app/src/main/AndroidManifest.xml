<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bayoex.yohablo">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/yohablo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/yohablo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Mapa"></activity>
        <activity android:name=".texto_a_senas" />
        <activity android:name=".Aprende_Senas" />
        <activity android:name=".VozTexto" />
        <activity android:name=".textoVoz" />
        <activity android:name=".MenuPrincipal" />
        <activity android:name=".SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".MessageActivity" />
        <activity android:name=".RegisterActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".LoginActivity" />
        <activity android:name=".StartActivity" />
    </application>

</manifest>